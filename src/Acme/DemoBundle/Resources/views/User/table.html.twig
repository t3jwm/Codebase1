{% extends "AcmeDemoBundle::manage_layout.html.twig" %}        

{% block content %}
    <div class="row">
        <div class="box col-md-12">
            <div class="box-inner">
                <div class="box-header well" data-original-title="">
                    <h2><i class="glyphicon glyphicon-user"></i> Users </h2>
                    <div class="box-icon">
                        <a href="#" class="btn btn-setting btn-round btn-default">
                            <i class="glyphicon glyphicon-cog"></i>
                        </a>
                        <a href="#" class="btn btn-minimize btn-round btn-default">
                            <i class="glyphicon glyphicon-chevron-up"></i>
                        </a>
                        <a href="#" class="btn btn-close btn-round btn-default">
                            <i class="glyphicon glyphicon-remove"></i>
                        </a>
                    </div>
                </div>
                <div class="box-content">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Username</th>
                                <th>Email</th>                                
                                <th>LastName</th>
                                <th>FirstName</th>
                                <th>Language</th>                                
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{entity.id}}</td>
                                    <td class="center">{{entity.userName}}</td>
                                    <td class="center">{{entity.email}}</td>                                    
                                    <td class="center">{{entity.lastName}}</td>
                                    <td class="center">{{entity.firstName}}</td>
                                    <td class="center">{{entity.language}}</td>
                                    
                                    <td class="center">                                   
                                        <a class="btn btn-info" href="{{ path('admin_edit', { 'id': entity.id }) }}">
                                            <i class="glyphicon glyphicon-edit icon-white" title="Edit"></i>                                            
                                        </a>
                                        <a class="btn btn-danger" href="{{ path('admin_delete', {'id': entity.id }) }}" 
                                           onclick="return confirm('Are you sure you want to delete this user ?')" >
                                            <i class="glyphicon glyphicon-trash icon-white" title="Delete"></i>                                            
                                        </a>
                                        <a class="btn btn-success" href="{{ path('admin_manageGallery', { 'id': entity.id }) }}">
                                            <i class="glyphicon glyphicon-picture" title="View Image"></i>                                            
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}

                        </tbody>
                    </table>
                    <a class="btn btn-primary" href="{{ path('admin_new')}}">           
                        <i class="glyphicon glyphicon-user">
                            Create
                        </i>                        
                    </a>
                </div>
            </div>
        </div>  
    </div>
{% endblock %}



