{% extends "AcmeDemoBundle::manage_layout.html.twig" %}


    

        
        {% block leftmenu %}
        <div class="col-sm-2 col-lg-2">
            <div class="sidebar-nav">
                <div class="nav-canvas">
                    <div class="nav-sm nav nav-stacked">
                    </div>
                    <ul class="nav nav-pills nav-stacked main-menu">
                        <li class="nav-header">Main</li>
                        <!--
                        <li><a class="ajax-link" href="{{ path('admin_home') }}"><i class="glyphicon glyphicon-home"></i><span> Dashboard</span></a>
                        </li>                       
                        -->
                        <li><a class="ajax-link" href="{{ path('pnc_management_userprofile') }}"><i
                                    class="glyphicon glyphicon-edit"></i><span> Profile</span></a></li>
                        
                        <li><a class="ajax-link" href="{{ path('admin_gallery') }}"><i class="glyphicon glyphicon-picture"></i><span> Gallery</span></a>
                        </li>

                        
                        {% if   app.session.get('isAdmin') == 1 %}
                        <li><a class="ajax-link" href="{{ path('admin_table') }}"><i
                                    class="glyphicon glyphicon-align-justify"></i><span> Users Table </span></a></li>
                        {% endif %}

                                                                                                                                          
                        <li><a href="{{ path('pnc_management_logout') }}"><i class="glyphicon glyphicon-lock"></i><span> Logout </span></a>
                        </li>
                    </ul>
                    
                </div>
            </div>
        </div>
        {% endblock %}

        
    {% block content %}
    <div class="row">
    <div class="box col-md-12">
    <div class="box-inner">
    <div class="box-header well" data-original-title="">
        <h2><i class="glyphicon glyphicon-user"></i> Users</h2>

        <div class="box-icon">
            <a href="#" class="btn btn-setting btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>
            <a href="#" class="btn btn-minimize btn-round btn-default"><i
                    class="glyphicon glyphicon-chevron-up"></i></a>
            <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
        </div>
    </div>
    <div class="box-content">
    
    
    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <thead>
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <!--<th>Password</th>-->
        <th>LastName</th>
        <th>FirstName</th>
        <th>Language</th>
        <th>IsAdmin</th>
        
    </tr>
    </thead>
    <tbody>
    
    
        {% for entity in entities %}
        <tr>
            <td>{{entity.id}}</td>
            <td class="center">{{entity.userName}}</td>
            <td class="center">{{entity.email}}</td>
            <!--<td class="center">{{entity.password}}</td>-->
            <td class="center">{{entity.lastName}}</td>
            <td class="center">{{entity.firstName}}</td>
            <td class="center">{{entity.language}}</td>
            <td class="center">{{entity.isAdmin}}</td>
                              
            <td class="center">
            <!--<a class="btn btn-success" href="{{ path('admin_show', { 'id': entity.id }) }}">
            <i class="glyphicon glyphicon-zoom-in icon-white"></i>
            View
            </a>-->
            <a class="btn btn-info" href="{{ path('admin_edit', { 'id': entity.id }) }}">
            <i class="glyphicon glyphicon-edit icon-white"></i>
            Edit
            </a>
            <a class="btn btn-danger" href="{{ path('admin_delete', {'id': entity.id }) }}" 
             onclick="return confirm('Are you sure you want to delete this user ?')" >
            <i class="glyphicon glyphicon-trash icon-white"></i>
            Delete
            </a>
            <a class="btn btn-success" href="{{ path('admin_manageGallery', { 'id': entity.id }) }}">
            <i class="glyphicon glyphicon-picture"></i>
            View Imgs
            </a>
            </td>


        </tr>
        {% endfor %}

    </tbody>
    </table>
            <a class="btn btn-primary" href="{{ path('admin_new')}}">           
            <i class="glyphicon glyphicon-user"></i>
            Create
            </a>
    </div>
    </div>
    </div>
    

    </div>
    {% endblock %}


    
