<?php

$vendorDir = __DIR__.'/../vendor';
require_once $vendorDir.'/symfony/symfony/src/Symfony/Component/ClassLoader/UniversalClassLoader.php';

use Symfony\Component\ClassLoader\UniversalClassLoader;

$loader = new UniversalClassLoader();
$loader->registerNamespaces(array(
    'Symfony' => $vendorDir.'/symfony/symfony/src',
));
$loader->register();

spl_autoload_register(function($class)
{
    if (0 === strpos($class, 'Spraed\\PDFGeneratorBundle\\') &&
        file_exists($file = __DIR__.'/../'.implode('/', array_slice(explode('\\', $class), 2)).'.php')) {
        require_once $file;
        return true;
    }
});